{
  "$ref": "#/definitions/Config",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Config": {
      "additionalProperties": {
        "$ref": "#/definitions/ConfigItem"
      },
      "type": "object"
    },
    "ConfigItem": {
      "additionalProperties": false,
      "properties": {
        "annotationLimit": {
          "description": "The limit number of annotations for failed tests.",
          "type": "number"
        },
        "directories": {
          "description": "The directories to search for the reports.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "fileName": {
          "description": "The file name of the JUnit report.",
          "type": "string"
        },
        "title": {
          "description": "The title of the column.",
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/ConfigItemType",
          "description": "The type of the column."
        }
      },
      "required": [
        "title",
        "type",
        "directories",
        "fileName"
      ],
      "type": "object"
    },
    "ConfigItemType": {
      "enum": [
        "gotestsum",
        "golangci-lint"
      ],
      "type": "string"
    }
  }
}
